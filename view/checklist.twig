{% from '_macros' import renderError, renderTooltip %}
<div class="column {{ column is not empty ? column : 'is-full' }}">
    <div class="field">
        <div class="control">
            <div class="label">{{ label }} {{ is_required ? '*' }}</div>
            {{ renderTooltip(tooltip) }}
            <div class="grouped-form-elements" id="{{ id }}">
                {%- for choice_label, choice_value in choices -%}
                    <label class="checkbox">
                        <input
                                type="checkbox"
                                id="{{ id~'['~loop.index0~']' }}"
                                name="{{ id~'['~loop.index0~']' }}"
                                value="{{ choice_value }}"
                                {{ choice_value in value ? 'checked' }}
                                class="checkbox-input form-input" />
                                {{- choice_label | raw -}}
                    </label>
                    {%- if alignment is defined and alignment == 'vertical' -%}
                        <br />
                    {% endif %}
                {%- endfor -%}
            </div>
        </div>
        {{ renderError(errors) }}
    </div>
</div>