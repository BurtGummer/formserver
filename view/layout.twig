{%- block form -%}
    <!DOCTYPE html>
    <html lang="de">
        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>{{ title is defined ? title : 'Form'}}</title>
            <link rel="stylesheet" href="/css/{{ css }}" />
        </head>
        <body>
            <section class="section">
                <div class="container">
                    {% if title is defined  %}
                        <h1 class="title">{{ title }}</h1>
                    {% endif %}

                    <form {{ action is defined ? 'action='~action }} method="post">
                        {{ formHtml | raw }}
                        <div class="field">
                            <div class="control">
                                <button class="button is-link" type="submit">Absenden</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </body>
    </html>
{%- endblock -%}


{%- block fieldset -%}
    <fieldset>
        <div class="label fieldset-label">
            {{ label }}
        </div>
        {% for renderedChildView in renderedChildViews %}
            {{ renderedChildView | raw }}
        {% endfor %}
    </fieldset>
{%- endblock -%}



{%- block textinput -%}
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }}</label>
        <div class="control">
            <input type="text" id="{{ id }}" name="{{ id }}" value="{{ value }}" />
        </div>
    </div>
{%- endblock -%}


{%- block numberinput -%}
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }}</label>
        <div class="control">
            <input type="number" id="{{ id }}" name="{{ id }}" value="{{ value }}" />
        </div>
    </div>
{%- endblock -%}


{%- block date -%}
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }}</label>
        <div class="control">
            <input type="date" id="{{ id }}" name="{{ id }}"  value="{{ value }}" />
        </div>
    </div>
{%- endblock -%}


{%- block time -%}
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }}</label>
        <div class="control">
            <input type="time" id="{{ id }}" name="{{ id }}"  value="{{ value }}" />
        </div>
    </div>
{%- endblock -%}


{%- block datetime -%}
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }}</label>
        <div class="control">
            <input type="datetime-local" id="{{ id }}" name="{{ id }}"  value="{{ value }}" />
        </div>
    </div>
{%- endblock -%}


{%- block email -%}
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }}</label>
        <div class="control has-icons-left">
            <input type="email" id="{{ id }}" name="{{ id }}"  value="{{ value }}" />
            <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
            </span>
        </div>
    </div>
{%- endblock -%}


{%- block hidden -%}
    <input type="hidden" id="{{ id }}" name="{{ id }}" value="{{ value }}" />
{%- endblock -%}


{%- block textarea -%}
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }}</label>
        <div class="control">
            <textarea id={{ id }} name="{{ id }}"  {{ cols is defined ? 'cols='~cols }} {{ rows is defined ? 'rows='~rows }}>{{ value }}</textarea>
        </div>
    </div>
{%- endblock -%}


{%- block radioset -%}
    <div class="field">
        <div class="control">
            <div class="label">{{ label }}</div>
            {%- for choice in choices -%}
                <label class="radio">
                    <input type="radio" id="{{ id~'['~loop.index0~']' }}" name="{{ id }}" value="{{ choice }}" {{ value == choice ? 'checked' }} />
                    {{ choice }}
                </label>
            {%- endfor -%}
        </div>
    </div>
{%- endblock -%}


{%- block checklist -%}
    <div class="field">
        <div class="control">
            <div class="label">{{ label }}</div>
            {%- for choice in choices -%}
                <label class="checkbox">
                    <input type="checkbox" id="{{ id~'['~loop.index0~']' }}" name="{{ id~'['~loop.index0~']' }}" value="{{ choice }}" {{ choice in value ? 'checked' }} />
                    {{ choice }}
                </label>
            {%- endfor -%}
        </div>
    </div>
{%- endblock -%}


{%- block dropdown -%}
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }}</label>
        <div class="control">
            <div class="select">
                <select id="{{ id }}" name="{{ id }}" {{ size is defined ? 'size='~size }} {{ multiselect is defined and multiselect ? 'multiple' }}>
                    {%- for choice in choices -%}
                        <option {{ choice in value ? 'selected' }}>{{ choice }}</option>
                    {%- endfor -%}
                </select>
            </div>
        </div>
    </div>
{%- endblock -%}


{%- block upload -%}
    <div class="file">
        <label class="file-label">
            <input type="file" class="file-input" id={{ id }} name="{{ id }}" {{ fileext is defined ? 'accept='~fileext }} />
            <span class="file-cta">
                <span class="file-icon">
                    <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                    {{ label }}
                </span>
            </span>
        </label>
    </div>
{%- endblock -%}


{%- block download -%}
    <div class="field">
        <div class="control">
            <a href="{{ href }}" target="_blank">{{ label }}</a>
        </div>
    </div>
{%- endblock -%}


{%- block image -%}
    <div class="field">
    <div class="label">{{ label }}</div>
        <div class="control">
            <img src="{{ src }}" style="{{ width is defined ? 'width:'~width~'px;' }} {{ height is defined ? 'height:'~height~'px;' }}" alt="{{ alt is defined ? alt : label }}">
        </div>
    </div>
{%- endblock -%}


{%- block markdown -%}
    <div class="field">
        <div class="control">
            {{ markdown | raw }}
        </div>
    </div>
{%- endblock -%}