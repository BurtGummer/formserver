{% from '_macros' import renderError, renderTooltip %}
<div class="column {{ column is not empty ? column : 'is-full' }}">
    <div class="field">
        <label class="label" for="{{ id }}">{{ label }} {{ is_required ? '*' }}</label>
        {{ renderTooltip(tooltip) }}
        <div class="control">
            <input
                    type="number"
                    id="{{ id }}"
                    name="{{ id }}"
                    value="{{ value }}"
                    class="input form-input {{ errors is not empty ? 'is-danger' }}"
                    {{ placeholder is not empty ? ('placeholder="' ~ placeholder ~ '"') | raw }} />
        </div>
        {{ renderError(errors) }}
    </div>
</div>